  "automation_rules": {
    "github_auto_pr": {
      "enabled": true,
      "trigger": "task_completion",
      "conditions": [
        "task.success == true",
        "task.type.includes('development')",
        "project.has_git_repo == true"
      ],
      "actions": [
        "create_feature_branch",
        "commit_changes",
        "create_pull_request"
      ]
    },
    
    "jira_status_sync": {
      "enabled": true,
      "trigger": "task_progress_update",
      "conditions": [
        "task.external_source == 'jira'",
        "task.external_id.exists"
      ],
      "actions": [
        "update_jira_status",
        "log_work_time",
        "add_progress_comment"
      ]
    },
    
    "slack_notifications": {
      "enabled": true,
      "trigger": ["task_completion", "task_error"],
      "conditions": [
        "task.complexity_score >= 5",
        "OR task.success == false"
      ],
      "actions": [
        "send_completion_notification",
        "update_team_dashboard"
      ]
    },
    
    "monitoring_metrics": {
      "enabled": true,
      "trigger": "task_completion",
      "conditions": ["always"],
      "actions": [
        "send_performance_metrics",
        "update_success_rate_gauge",
        "check_performance_thresholds"
      ]
    }
  },
  
  "workflow_templates": {
    "laravel_development": {
      "name": "Laravel Development Workflow",
      "description": "Complete Laravel development workflow with CI/CD",
      "steps": [
        {
          "id": "github_branch",
          "name": "Create GitHub Branch",
          "integration": "github",
          "action": "create_branch"
        },
        {
          "id": "development",
          "name": "Development Phase",
          "integration": "claude_code",
          "action": "execute_task"
        },
        {
          "id": "github_pr",
          "name": "Create Pull Request",
          "integration": "github",
          "action": "create_pr",
          "depends_on": ["development"]
        },
        {
          "id": "jira_update",
          "name": "Update Jira Issue",
          "integration": "jira",
          "action": "update_issue_progress",
          "depends_on": ["development"]
        },
        {
          "id": "slack_notification",
          "name": "Notify Team",
          "integration": "slack",
          "action": "send_notifications",
          "depends_on": ["github_pr"]
        }
      ]
    }
  },
  
  "sync_settings": {
    "global_sync_interval": 300,
    "retry_attempts": 3,
    "retry_backoff": "exponential",
    "timeout_seconds": 30,
    "batch_size": 100
  },
  
  "webhook_security": {
    "verify_signatures": true,
    "allowed_ips": [],
    "rate_limiting": {
      "requests_per_minute": 60,
      "burst_limit": 10
    }
  },
  
  "data_retention": {
    "webhook_logs_days": 30,
    "sync_history_days": 90,
    "error_logs_days": 180
  },
  
